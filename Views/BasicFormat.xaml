<Page x:Class="ProjectManager.Views.BasicFormat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"                                                                                                        
      DataContext="{Binding BasicFormatViewModel, Source={StaticResource Locator}}"
      xmlns:dd="urn:gong-wpf-dragdrop"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1200"
      Title="Page1">

    <Grid Background="#FFEAE7E7">
        <TabControl Style="{StaticResource TabControlPivotStyle}" SelectedIndex="{Binding SelectedTabItem}">
            <TabItem Height="40" >
                <TabItem.Header>
                    <TextBlock Text="Part I" Foreground="Black" Margin="0,  0, 10, 0" />
                </TabItem.Header>
                <Grid Margin="20, 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="6*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{DynamicResource PageTitleStyle}" Text="New product introduction"/>
                    <materialDesign:Card  Foreground="Black" Margin="20, 20, 20, 10" Grid.Row="1" UniformCornerRadius="10">
                        <StackPanel>
                            <TextBlock Text="New Costumer?" FontSize="18" FontWeight="SemiBold" Margin="10, 10, 5, 0" />
                            <Grid Margin="0, 4, 0, 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center" Margin="10, 10, 0, 0" Kind="ThumbsUp" Foreground="Green"/>
                                <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center" Margin="10, 10, 0, 0" Kind="ThumbsDown" Grid.Row="1" Foreground="red"/>
                                <RadioButton Content="Yes" Grid.Column="1"  Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0"  FontSize="16" VerticalAlignment="Center" IsChecked="{Binding NewCustomer}" />
                                <RadioButton Content="No" Grid.Column="1" Grid.Row="1" Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0"  FontSize="16" VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Grid.Row="1" Foreground="Black"  Margin="20, 20, 20, 10" Grid.Column="1" UniformCornerRadius="10" >
                        <StackPanel>
                            <TextBlock Text="Assembly quantity" FontSize="18" FontWeight="SemiBold" Margin="10, 10, 5, 0"/>
                            <StackPanel Margin="20, 20, 30, 30" Orientation="Horizontal">
                                <materialDesign:PackIcon VerticalAlignment="Center" Kind="Connection" Width="32" Height="32" Foreground="Green"/>
                                <TextBox Style="{DynamicResource MaterialDesignTextBox}" Text="{Binding AssemblyQuantity}" FontSize="18" Margin="10, 0, 0, 0" Width="200" Cursor="Arrow"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Grid.Row="1"  Margin="20, 20, 20, 10" Grid.Column="2" UniformCornerRadius="10">
                        <StackPanel>
                            <TextBlock Text="Customer drawing available?" FontSize="18" FontWeight="SemiBold" Margin="10, 10, 5, 0" />
                            <Grid Margin="0, 4, 0, 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="146*" />
                                    <ColumnDefinition Width="167*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <materialDesign:PackIcon Width="24" Height="24" Margin="10, 10, 0, 0" Kind="ThumbsUp" Foreground="Green"/>
                                <materialDesign:PackIcon Width="24" Height="24" Margin="10, 10, 0, 0" Kind="ThumbsDown" Grid.Row="1" Foreground="red"/>
                                <RadioButton Content="Yes" Grid.Column="1"  Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0"  FontSize="16" VerticalAlignment="Top" Grid.ColumnSpan="2" IsChecked="{Binding CustomerDrawingAvailable}"/>
                                <RadioButton Content="No" Grid.Column="1" Grid.Row="1" Style="{DynamicResource MaterialDesignAccentRadioButton}"  Margin="10, 10, 0, 0" FontSize="16" VerticalAlignment="Top" Grid.ColumnSpan="2" />
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Grid.Row="2" Foreground="Black"  Margin="20, 20, 20, 10" UniformCornerRadius="10" >
                        <StackPanel>
                            <TextBlock Text="New raw material quantity" FontSize="18" FontWeight="SemiBold" Margin="10, 10, 5, 0"/>
                            <StackPanel Margin="20, 20, 30, 30" Orientation="Horizontal">
                                <materialDesign:PackIcon VerticalAlignment="Center" Foreground="Green" Width="32" Height="32" Kind="Package"/>
                                <TextBox Width="200" Margin="10, 0, 0, 0" FontSize="18" Text="{Binding NewRawMaterialQty}" Style="{DynamicResource MaterialDesignTextBox}" Cursor="Arrow" />
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Grid.Row="2" Grid.Column="1" Foreground="Black"  Margin="20, 20, 20, 10" UniformCornerRadius="10" >
                        <StackPanel>
                            <TextBlock Text="New tooling?" FontSize="18" FontWeight="SemiBold" Margin="10, 10, 5, 0" />
                            <Grid Margin="0, 4, 0, 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center" Margin="10, 10, 0, 0" Kind="ThumbsUp" Foreground="Green"/>
                                <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center" Margin="10, 10, 0, 0" Kind="ThumbsDown" Grid.Row="1" Foreground="red"/>
                                <RadioButton Content="Yes" Grid.Column="1"  Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0"  FontSize="16" VerticalAlignment="Center" IsChecked="{Binding NewTooling}"/>
                                <RadioButton Content="No" Grid.Column="1" Grid.Row="1" Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0"  FontSize="16" VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Grid.Row="2" Grid.Column="2" Foreground="Black"  Margin="20, 20, 20, 10" UniformCornerRadius="10" >
                        <StackPanel>
                            <TextBlock Text="Testing board" FontSize="18" FontWeight="SemiBold" Margin="10, 10, 5, 0" />
                            <Grid Margin="0, 4, 0, 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center" Margin="10, 10, 0, 0" Kind="ThumbsUp" Foreground="Green"/>
                                <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center" Margin="10, 10, 0, 0" Kind="ThumbsDown" Grid.Row="1" Foreground="red"/>
                                <RadioButton Content="Yes" Grid.Column="1"  Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0"  FontSize="16" VerticalAlignment="Center"  IsChecked="{Binding TestingBoard}"/>
                                <RadioButton Content="No" Grid.Column="1" Grid.Row="1" Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0" FontSize="16" VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Grid.Row="3" Foreground="Black"  Margin="20, 20, 20, 10"  UniformCornerRadius="10">
                        <StackPanel>
                            <TextBlock Text="Routing board" FontSize="18" FontWeight="SemiBold" Margin="10, 10, 5, 0" />
                            <Grid Margin="0, 4, 0, 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center" Margin="10, 10, 0, 0" Kind="ThumbsUp" Foreground="Green"/>
                                <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center" Margin="10, 10, 0, 0" Kind="ThumbsDown" Grid.Row="1" Foreground="red"/>
                                <RadioButton Content="Yes" Grid.Column="1"  Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0"  FontSize="16" VerticalAlignment="Center" IsChecked="{Binding RoutingBoard}"/>
                                <RadioButton Content="No" Grid.Column="1" Grid.Row="1" Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0" FontSize="16" VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Grid.Row="3" Grid.Column="1" Foreground="Black"  Margin="20, 20, 20, 10" UniformCornerRadius="10" >
                        <StackPanel>
                            <TextBlock Text="New machine?" FontSize="18" FontWeight="SemiBold" Margin="10, 10, 5, 0" />
                            <Grid Margin="0, 4, 0, 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center" Margin="10, 10, 0, 0" Kind="ThumbsUp" Foreground="Green"/>
                                <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center" Margin="10, 10, 0, 0" Kind="ThumbsDown" Grid.Row="1" Foreground="red"/>
                                <RadioButton Content="Yes" Grid.Column="1"  Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0" FontSize="16" VerticalAlignment="Center" IsChecked="{Binding NewMachine}" />
                                <RadioButton Content="No" Grid.Column="1" Grid.Row="1" Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0" FontSize="16" VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Grid.Row="3" Grid.Column="2" Foreground="Black"  Margin="20, 20, 20, 10" UniformCornerRadius="10"  >
                        <StackPanel>
                            <TextBlock Text="New mold?" FontSize="18" FontWeight="SemiBold" Margin="10, 10, 5, 0" />
                            <Grid Margin="0, 4, 0, 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center" Margin="10, 10, 0, 0" Kind="ThumbsUp" Foreground="Green"/>
                                <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center" Margin="10, 10, 0, 0" Kind="ThumbsDown" Grid.Row="1" Foreground="red"/>
                                <RadioButton Content="Yes" Grid.Column="1"  Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0"  FontSize="16" VerticalAlignment="Center" IsChecked="{Binding NewMold}"/>
                                <RadioButton Content="No" Grid.Column="1" Grid.Row="1" Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0" FontSize="16" VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Grid.Row="4" Foreground="Black"  Margin="20, 20, 20, 10"  UniformCornerRadius="10">
                        <StackPanel>
                            <TextBlock Text="Crimp application/hand tool quantity" FontSize="18" FontWeight="SemiBold" Margin="10, 10, 5, 0"/>
                            <StackPanel Margin="20, 20, 30, 30" Orientation="Horizontal">
                                <materialDesign:PackIcon VerticalAlignment="Center" Kind="Tools" Width="32" Height="32" Foreground="Green"/>
                                <TextBox Width="200" FontSize="18" Text="{Binding CrimpApplication}" Style="{DynamicResource MaterialDesignTextBox}" Margin="10, 0, 0, 0" />
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Grid.Row="4" Grid.Column="1" Foreground="Black"  Margin="20, 20, 20, 10" UniformCornerRadius="10" >
                        <StackPanel>
                            <TextBlock Text="Is it automotive?" FontSize="18" FontWeight="SemiBold" Margin="10, 10, 5, 0" />
                            <Grid Margin="0, 4, 0, 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center" Margin="10, 10, 0, 0" Kind="ThumbsUp" Foreground="Green"/>
                                <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center" Margin="10, 10, 0, 0" Kind="ThumbsDown" Grid.Row="1" Foreground="red"/>
                                <RadioButton Content="Yes" Grid.Column="1"  Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0"  FontSize="16" VerticalAlignment="Center" IsChecked="{Binding IsAutomotive}"/>
                                <RadioButton Content="No" Grid.Column="1" Grid.Row="1" Style="{DynamicResource MaterialDesignAccentRadioButton}" Margin="10, 10, 0, 0" FontSize="16" VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                    <Button  Grid.Row="5" Grid.Column="2" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Green" Command="{Binding GetProjectLevelCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Get project level " FontSize="24" VerticalAlignment="Center" Margin="5, 0, 5, 0"/>
                            <materialDesign:PackIcon Kind="Play" VerticalAlignment="Center" Width="32" Height="32" Margin="0, 5, 0, 0"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Height="40" >
                <TabItem.Header>
                    <TextBlock Text="Part II" Foreground="Black" Margin="0,  0, 10, 0" />
                </TabItem.Header>
            <Grid Margin="50,0,-50,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*" />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Text="General information" Style="{DynamicResource PageTitleStyle}" FontWeight="Bold" Grid.ColumnSpan="2" Margin="24,0,0,0" />
                    <Grid Margin="30, 0, 0 ,0" Grid.Row="1" VerticalAlignment="Top" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <materialDesign:PackIcon Kind="AccountSupervisorCircle" Foreground="#FF3AA00A" Width="48" Height="48" Grid.RowSpan="2" VerticalAlignment="Bottom" Margin="0. 0. 10. 0" />
                        <TextBlock Text="Customer" VerticalAlignment="Bottom" FontFamily="Quicksand" Foreground="Black" Margin="0, 0, 0, 5" FontSize="18" Grid.Column="1"/>
                        <ComboBox materialDesign:HintAssist.Hint="Select an option"
                                  materialDesign:HintAssist.Foreground="Black"
                                  materialDesign:HintAssist.HintOpacity=".26"
                                  Foreground="Black"
                                  Grid.Column="1"
                                  Grid.Row="1"
                                  Height="50"
                                  ItemsSource="{Binding Customers}"
                                  SelectedValue="{Binding Project.IdCustomer}"
                                  Width="450"
                                  SelectedValuePath="IdCustomer"
                                  DisplayMemberPath="Name"
                                  IsEditable="True"
                                  Style="{DynamicResource MaterialDesignFloatingHintComboBox}"
                                  HorizontalAlignment="Left" >
                            <ComboBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ComboBox.ItemsPanel>
                        </ComboBox>
                    </Grid>
                    <StackPanel Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Left" Margin="0, 0, 0, 60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Connection" Foreground="Green" VerticalAlignment="Center" Margin="0, 0, 10, 0" Width="32" Height="32"/>
                            <TextBlock Text="Total assemblies in project" FontSize="18" HorizontalAlignment="Center" FontFamily="Quicksand" VerticalAlignment="Center" />
                        </StackPanel>
                        <Border Margin="0, 10, 0, 0"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="120" Width="120" Background="#FFD6D6D6" CornerRadius="20">
                            <TextBlock Text="{Binding Project.TotalAssembliesInProject}" Foreground="Green" Margin="0, 10, 0, 0" HorizontalAlignment="Center" FontSize="64" FontWeight="Bold" FontFamily="Quicksand" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                    <Grid Margin="35, 10, 0, 0" Grid.Row="2" VerticalAlignment="Top" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Image Source="/Assets/cotizacion.png" Grid.RowSpan="2" VerticalAlignment="Bottom" Width="38" Height="38" Margin="0, 0, 10, 0"/>
                        <TextBlock Text="Quote number" FontSize="18" Margin="3, 0, 0, 10" Grid.Column="1" VerticalAlignment="Bottom"/>
                        <TextBox BorderThickness="0"
                                 Grid.Column="1"
                                 Grid.Row="1"
                                 Foreground="White"
                                 Width="450"
                                 FontSize="19"
                                 Height="50"
                                 Text="{Binding Project.QuoteNumber}"
                                 ui:ControlHelper.CornerRadius="5"
                                 ui:ControlHelper.PlaceholderText="Enter the quote number"
                                 ui:ControlHelper.PlaceholderForeground="White"
                                 Background="#FF3AA00A"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Left"
                                 Margin="3, 0, 0, 0"
                                 Cursor="Arrow">
                        </TextBox>
                    </Grid>
                    <Grid Margin="35, 20, 0, 0" Grid.Row="3"  VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <materialDesign:PackIcon Kind="Comment" Foreground="Green" Grid.RowSpan="2" VerticalAlignment="Bottom" Width="38" Height="38" Margin="0, 0, 10, 0"/>
                        <TextBlock Text="Comments" FontSize="18" Margin="3, 0, 0, 10" Grid.Column="1" VerticalAlignment="Bottom"/>
                        <TextBox  Grid.Column="1"
                                 Grid.Row="1"
                                 Width="450"
                                 FontSize="19"
                                 Height="50"
                                 Text="{Binding Project.Comments}"
                                 BorderThickness="0"
                                 ui:ControlHelper.CornerRadius="5"
                                 ui:ControlHelper.PlaceholderText="Enter the comments"
                                 ui:ControlHelper.PlaceholderForeground="Black"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Left"
                                 Margin="3, 0, 0, 0"
                                 Cursor="Arrow">
                        </TextBox>
                    </Grid>
                    <TextBlock Text="Specific information" Style="{DynamicResource PageTitleStyle}" FontWeight="Bold" Grid.Row="4" Grid.ColumnSpan="2" Margin="24, 0, 0, 0" />
                    <Grid Margin="30, 60, 0, 10" Grid.Row="4" Grid.RowSpan="2" VerticalAlignment="Center" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <materialDesign:PackIcon Kind="AccountBox" Margin="0. 0. 10. 0"  Foreground="#FF3AA00A" Grid.RowSpan="2" VerticalAlignment="Bottom" Width="48" Height="48" />
                        <TextBlock Text="Project manager" VerticalAlignment="Bottom" Foreground="Black" Margin="0, 0, 0, 5" FontSize="18" Grid.Column="1"/>
                        <ComboBox materialDesign:HintAssist.Hint="Select an option"
                                  materialDesign:HintAssist.Foreground="Black"
                                  materialDesign:HintAssist.HintOpacity=".26"
                                  Foreground="Black"
                                  Grid.Column="1"
                                  Grid.Row="1"
                                  ItemsSource="{Binding Managers}"
                                  SelectedValue="{Binding Project.IdManager}"
                                  SelectedValuePath="IdEmployee"
                                  Width="450"
                                  HorizontalAlignment="Left"
                                  Style="{DynamicResource MaterialDesignFilledComboBox}"
                                  VerticalAlignment="Center" >
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountTie" Width="28" Height="24"/>
                                        <TextBlock Text="{Binding Name}" Margin="8, 0, 0, 0" VerticalAlignment="Center" FontFamily="Quicksand" FontWeight="Bold"/>
                                        <TextBlock Text="-" Margin="2, 0, 0, 0" VerticalAlignment="Center" FontFamily="Quicksand Medium"/>
                                        <TextBlock Text="{Binding IdDepartamentNavigation.Name}" Margin="5, 0, 0, 0" VerticalAlignment="Center" FontFamily="Quicksand" Foreground="Green" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding IdSiteNavigation.Name}" Margin="8, 0, 0, 0" VerticalAlignment="Center" FontWeight="Bold" Foreground="Black"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="0, 90, 0, 50" Grid.RowSpan="4"  >
                        <StackPanel VerticalAlignment="Center"  Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Calendar" VerticalAlignment="Center" Foreground="Green" Margin="0, 0, 10, 0" Width="32" Height="32" />
                            <TextBlock Text="Customer Needby" FontSize="18" Foreground="Black" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Calendar HorizontalAlignment="Left" Margin="0, 20, 0, 0" Width="380" Height="260" SelectedDate="{Binding Project.CustomerNeedby}" materialDesign:CalendarAssist.Orientation="Horizontal" Style="{DynamicResource MaterialDesignCalendarPortrait}"  />
                    </StackPanel>
                    <Button Grid.Row="5" Margin="0, 0, 50, 0" Command="{Binding GoToLastTabItemCommand}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Background="Transparent">
                        <materialDesign:PackIcon Kind="ArrowLeftBoldBox" Width="34" Height="34" Foreground="Green"/>
                    </Button>
                    <Button Grid.Column="1" Grid.Row="5" Margin="0, 0, 50, 0" Command="{Binding GoToNextTabItemCommand}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="Transparent">
                        <materialDesign:PackIcon Kind="ArrowRightBoldBox" Width="34" Height="34" Foreground="Green"/>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Part III"/>
                </TabItem.Header>
                <materialDesign:Card Grid.Column="1" Grid.RowSpan="2" Width="450" Background="Transparent" UniformCornerRadius="10" HorizontalAlignment="Left" Margin="0,0,0,50" >
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,5,0,0">
                            <Button Command="{Binding AddPartCommand}" Background="Transparent">
                                <materialDesign:PackIcon Kind="Add" Foreground="Green" Width="20" Height="20"/>
                            </Button>
                            <Button Command="{Binding DeletePartCommand}" Background="Transparent">
                                <materialDesign:PackIcon Kind="Delete" Foreground="Green" Width="20" Height="20"/>
                            </Button>
                        </StackPanel>

                        <TextBlock Foreground="Black" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <Run Text="Parts count: "/>
                            <Run Text="{Binding NewParts.Count, Mode=OneWay}" FontWeight="Black" FontSize="16" Foreground="Green"/>
                        </TextBlock>

                        <ScrollViewer Margin="0,40,20,0" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Visible">
                            <ItemsControl ItemsSource="{Binding NewParts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5,10,0,7">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="28" Height="28" Margin="5,15,0,0" CornerRadius="50" Background="Green" VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="Cube" Width="22" Height="22" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Border>
                                                <TextBox Text="{Binding PartNumber, Mode=TwoWay}" FontSize="15" Width="210" Style="{DynamicResource MaterialDesignFloatingHintTextBox}" materialDesign:TextFieldAssist.TextFieldCornerRadius="5" BorderBrush="Green" materialDesign:HintAssist.Hint="Part number" Foreground="Black" Margin="15,0,10,0"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="10,0,0,0">
                                                <TextBox Text="{Binding Revision, Mode=TwoWay}" FontSize="15" Width="130" Style="{DynamicResource MaterialDesignFloatingHintTextBox}" materialDesign:TextFieldAssist.TextFieldCornerRadius="5" BorderBrush="Green" materialDesign:HintAssist.Hint="Revision" Foreground="Black" Margin="0,0,10,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </materialDesign:Card>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Part IV"/>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Button Margin="10, 0, 0, 0" Command="{Binding GoToLastTabItemCommand}" VerticalAlignment="Top" HorizontalAlignment="Left" Background="Transparent">
                        <materialDesign:PackIcon Kind="ArrowLeftBoldBox" Width="34" Height="34" Foreground="Green"/>
                    </Button>
                    <TextBlock Text="Project Breakdown" Style="{DynamicResource PageTitleStyle}" Margin="24,0,0,0" />
                    <TextBlock Text="Assign a person responsible for each task" Style="{DynamicResource ListSubTitleStyle}" Margin="24, 80 ,0,0" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 0, 100, 0">
                        <Button Command="{Binding AddProjectCommand}" Background="Green" >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Create project" Foreground="White" FontSize="18"/>
                                <materialDesign:PackIcon Kind="Approve" Width="30" Height="30" Foreground="White" VerticalAlignment="Center" Margin="10, 0, 0, 0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <ScrollViewer Grid.RowSpan="4" Grid.Row="1" HorizontalScrollBarVisibility="Visible">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Content="#" Width="80" />
                                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Content="Task Name" Width="240" />
                                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Content="Duration" Width="120" />
                                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Content="Predecessor" Width="120" />
                                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Content="Start date" Width="240" Cursor="Hand" />
                                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Content="Target date" Width="200" Cursor="Hand"/>
                                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Content="Responsible" Width="300"/>
                            </StackPanel>
                            <ui:ListView Grid.Row="1" ItemsSource="{Binding TaskList}" Margin="-10, 0, 0, 0" BorderThickness="1" >
                                <ui:ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80" />
                                                <ColumnDefinition Width="220" />
                                                <ColumnDefinition Width="120" />
                                                <ColumnDefinition Width="120" />
                                                <ColumnDefinition Width="240" />
                                                <ColumnDefinition Width="200" />
                                                <ColumnDefinition Width="300" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal" >
                                                <Border Margin="0, 0, 10, 0" CornerRadius="10" Height="13" Width="13" Background="{Binding IdTaskNavigation.NumberColor}" VerticalAlignment="Center"/>
                                                <TextBlock  Text="{Binding IdTaskNavigation.Number}" VerticalAlignment="Center" FontSize="20" Foreground="Black" FontWeight="Bold" FontFamily="Quicksand"/>
                                            </StackPanel>
                                            <TextBlock  Grid.Column="1"  Text="{Binding IdTaskNavigation.Name}" VerticalAlignment="Center" Foreground="Black" FontWeight="Bold" FontFamily="Quicksand"/>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="2" HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="TimerSand" Height="22" Width="22" VerticalAlignment="Center"/>
                                                <TextBox Text="{Binding Duration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="ArrowUp" Height="22" Width="22" VerticalAlignment="Center"/>
                                                <TextBlock Margin="10, 0, 0, 0" Foreground="Black" FontSize="15"  HorizontalAlignment="Center" VerticalAlignment="Center" >
                                                <Run Text="{Binding IdTaskNavigation.PredecessorTask.Number}" FontWeight="Black" Foreground="Green"/>
                                                </TextBlock>
                                            </StackPanel>
                                            <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center" Margin="20, 0, 0, 0">
                                                <materialDesign:PackIcon Kind="CalendarClock" Width="28" Height="28" Foreground="Green" />
                                                <TextBlock Text="{Binding LongStartDate}"
                                                       FontStyle="Italic"
                                                       Margin="10, 0, 0, 0"
                                                       />
                                            </StackPanel>
                                            <TextBlock Text="{Binding LongEndDate}"
                                                   FontStyle="Italic"
                                                   Margin="10, 0, 0, 0"
                                                   VerticalAlignment="Center"
                                                   Grid.Column="5"
                                                       />
                                            <StackPanel Grid.Column="6" Orientation="Horizontal" Margin="20, 0, 0, 0">
                                                <ComboBox x:Name="CbEmployee" IsEditable="True" IsTextSearchEnabled="True" TextSearch.TextPath="Name" SelectedItem="{Binding IdEmployeeNavigation}" ItemsSource="{Binding EmployeeList}"  ui:ControlHelper.PlaceholderText="Select a responsable"  BorderBrush="Black"  Foreground="Black" Margin="10, 5, 0, 0" >
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="AccountTie" Width="28" Height="24"/>
                                                                <TextBlock Text="{Binding Name}" Margin="8, 0, 0, 0" VerticalAlignment="Center" FontFamily="Quicksand" FontWeight="Bold"/>
                                                                <TextBlock Text="-" Margin="2, 0, 0, 0" VerticalAlignment="Center" FontFamily="Quicksand Medium"/>
                                                                <TextBlock Text="{Binding IdDepartamentNavigation.Name}" Margin="5, 0, 0, 0" VerticalAlignment="Center" FontFamily="Quicksand" Foreground="Green" FontWeight="SemiBold"/>
                                                                <TextBlock Text="{Binding IdSiteNavigation.Name}" Margin="8, 0, 0, 0" VerticalAlignment="Center" FontWeight="Bold" Foreground="Black"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="SelectionChanged">
                                                            <i:InvokeCommandAction Command="{Binding ElementName=DgTasks, Path=DataContext.GetEmployeeCommand}" CommandParameter="{Binding ElementName=CbEmployee, Path=DataContext.IdEmployee}" />
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </ComboBox>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ui:ListView.ItemTemplate>
                            </ui:ListView>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
