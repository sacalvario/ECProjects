<Page x:Class="ProjectManager.Views.BasicFormat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      DataContext="{Binding BasicFormatViewModel, Source={StaticResource Locator}}"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="#FFEAE7E7">
        <TabControl Style="{StaticResource TabControlPivotStyle}">
            <TabItem Height="40" >
                <TabItem.Header>
                    <TextBlock Text="Part 1" Foreground="Black" Margin="0,  0, 10, 0" />
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="General information" Style="{DynamicResource PageTitleStyle}" />
                    <StackPanel Margin="30, 15, 0, 0" Orientation="Horizontal" Grid.Row="1">
                        <materialDesign:PackIcon Kind="AccountSupervisorCircle" Foreground="#FF3AA00A" VerticalAlignment="Center" Width="38" Height="38" Margin="0, 15, 10, 0"/>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Customer name" Foreground="Black" Margin="0, 0, 0, 15"/>
                            <ComboBox materialDesign:HintAssist.Hint="Select an option"
                                      materialDesign:HintAssist.Foreground="Black"
                                      materialDesign:HintAssist.HintOpacity=".26"
                                      IsEditable="True"
                                      Width="400"
                                      VerticalAlignment="Center">
                                <ComboBoxItem Content="Apple" />
                                <ComboBoxItem Content="Banana" />
                                <ComboBoxItem Content="Pear" />
                                <ComboBoxItem Content="Orange" />
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                    <Grid Grid.Row="2" Grid.RowSpan="2" Margin="30, 15, 0, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ScrollViewer >
                            <ItemsControl ItemsSource="{Binding Options}" VerticalAlignment="Center" >
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0, 0, 0, 15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="PowerPlug" Foreground="#FF3AA00A" VerticalAlignment="Center" Width="40" Height="40" Margin="0, 15, 10, 0" />
                                                <TextBox Text="{Binding OptionId}" Width="350" BorderThickness="1" Margin="0, 0, 0, 15" ui:ControlHelper.Header="Customer part number" ui:ControlHelper.PlaceholderText="Enter the new part number" FontSize="15"  />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Image Source="/Assets/version.png" Width="40" Height="40" VerticalAlignment="Center" Margin="0, 15, 10, 0"/>
                                                <TextBox  Text="{Binding OptionName}" Width="350" HorizontalAlignment="Stretch" BorderThickness="1" Margin="0, 0, 0, 15"  ui:ControlHelper.Header="Customer par revision" ui:ControlHelper.PlaceholderText="Enter revision part"  FontSize="15"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        <Button Grid.Column="1" Command="{Binding AddCommand}" Background="Transparent" VerticalAlignment="Top" Margin="0, 50, 0, 0" >
                            <materialDesign:PackIcon Kind="PlusCircle" Foreground="Orange" Width="38" Height="38"/>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="4">
                        <TextBlock />
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Height="40" Margin="0, 0, 10, 0">
                <TabItem.Header>
                    <TextBlock Text="Part II" Foreground="Black" />
                </TabItem.Header >
            </TabItem>
        </TabControl>
    </Grid>
</Page>
