<Window x:Class="ECN.Views.ShellLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        DataContext="{Binding ShellLoginViewModel, Source={StaticResource Locator}}"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="430" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid Background="#FFEA2525">
        <TextBlock Text="ELECTRI-CORD" FontFamily="Arial" FontWeight="Black" Foreground="White" FontSize="20" FontStyle="Oblique" HorizontalAlignment="Center" Margin="0, 20, 0, 0" VerticalAlignment="Top"/>
        <Border Background="White" Margin="30, 60" CornerRadius="5">
            <ui:Frame x:Name="loginFrame"/>
        </Border>
    </Grid>
</Window>
