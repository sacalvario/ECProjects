<Page x:Class="ECN.Views.HistoryDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:local="clr-namespace:ECN.Views"
      DataContext="{Binding HistoryDetailsViewModel, Source={StaticResource Locator}}"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="900"
      Title="HistoryDetails">

    <Grid Background="#FFE0E0E0">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Height="100" Width="550" Margin="20, 15, 0, 0" >
            <Image Source="/Assets/file96.png" Margin="20, 15, 5, 15" />
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 3">
                    <TextBlock FontSize="26" FontWeight="Black" >
                        <Run Text="Folio" />
                        <Run Text="{Binding Ecn.Id}" Foreground="#FFF1223F"  />
                    </TextBlock>
                    <Border VerticalAlignment="Top" HorizontalAlignment="Left" Height="20" Width="60" Margin="30, 10, 0, 0" Visibility="{Binding Ecn.IsEcoVisibility}" CornerRadius="10" Background="#FFFF0033">
                        <TextBlock Foreground="White" Text="ECO" HorizontalAlignment="Center" FontWeight="Black" FontSize="15" d:IsLocked="True"/>
                    </Border>
                </StackPanel>
                <TextBlock FontSize="16" >
                    <Run Text="Fecha de inicio" />
                    <Run Text="{Binding Ecn.LongDate, Mode=OneWay}" FontWeight="Black" />
                </TextBlock>
                <TextBlock FontSize="16"  >
                    <Run Text="Fecha de cierre estimada"/>
                    <Run Text="{Binding Ecn.LongEndDate, Mode=OneWay}" FontWeight="Black" />
                </TextBlock>
            </StackPanel>
        </StackPanel>
        <TabControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="40, 130, 10, 10" Style="{StaticResource MahApps.Styles.TabControl}" Background="#FFE0E0E0">
            <TabItem Height="40">
                <TabItem.Header>
                    <TextBlock Text="Información General" FontFamily="Quicksand Medium" FontSize="16" Foreground="Black"/>
                </TabItem.Header>
                <Grid>
                    <ui:SimpleStackPanel Height="400" Width="550" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0, 30" Spacing="10"  >
                        <TextBlock FontSize="16" FontWeight="Black" Visibility="{Binding Ecn.IsEcoVisibility}" >
                            <Run Text="Número de Eco"/>
                            <Run Text="{Binding Ecn.EcnEco.IdEco}" Foreground="#FFF1223F"/>
                        </TextBlock>
                        <TextBlock FontSize="15" FontWeight="Black" Visibility="{Binding Ecn.IsEcoVisibility}">
                            <Run Text="Tipo de Eco"/>
                            <Run Text="{Binding Ecn.EcnEco.EcoType.EcoTypeName}" Foreground="#FFF1223F"/>
                        </TextBlock>
                        <TextBlock FontSize="15" FontWeight="Black" >
                            <Run Text="Tipo de cambio"/>
                            <Run Text="{Binding Ecn.ChangeType.ChangeTypeName}" Foreground="#FFF1223F"/>
                        </TextBlock>
                        <TextBlock FontSize="15" FontWeight="Black" >
                            <Run Text="Tipo de documento"/>
                            <Run Text="{Binding Ecn.DocumentType.DocumentTypeName}" Foreground="#FFF1223F"/>
                        </TextBlock>
                        <TextBlock FontSize="15" FontWeight="Black" >
                            <Run Text="Número de documento"/>
                            <Run Text="{Binding Ecn.DocumentNo}" Foreground="#FFF1223F"/>
                        </TextBlock>
                        <TextBlock FontSize="15" FontWeight="Black" >
                            <Run Text="Nombre de documento"/>
                            <Run Text="{Binding Ecn.DocumentName}" Foreground="#FFF1223F"/>
                        </TextBlock>
                        <TextBlock FontSize="15" FontWeight="Black" >
                            <Run Text="Fecha de actualización del documento"/>
                            <Run Text="{Binding Ecn.LongDocumentUpgradeDate, Mode=OneWay}" Foreground="#FFF1223F"/>
                        </TextBlock>
                        <TextBlock FontSize="15" FontWeight="Black" >
                            <Run Text="Nivel de revisión del documento"/>
                            <Run Text="{Binding Ecn.DocumentLvl, Mode=OneWay}" Foreground="#FFF1223F"/>
                        </TextBlock>
                        <TextBlock FontSize="15" FontWeight="Black" >
                            <Run Text="Nivel de revisión del dibujo"/>
                            <Run Text="{Binding Ecn.DrawingLvl, Mode=OneWay}" Foreground="#FFF1223F"/>
                        </TextBlock>
                        <TextBlock FontSize="15" FontWeight="Black" >
                            <Run Text="Nivel anterior de revisión del documento"/>
                            <Run Text="{Binding Ecn.OldDocumentLvl, Mode=OneWay}" Foreground="#FFF1223F"/>
                        </TextBlock>
                        <TextBlock FontSize="15" FontWeight="Black" >
                            <Run Text="Nivel anterior de revisión del dibujo"/>
                            <Run Text="{Binding Ecn.OldDrawingLvl, Mode=OneWay}" Foreground="#FFF1223F"/>
                        </TextBlock>
                    </ui:SimpleStackPanel>
                </Grid>
            </TabItem>
            <TabItem Height="40" >
                <TabItem.Header>
                    <TextBlock Text="Números de parte" FontFamily="Quicksand Medium" FontSize="16" Foreground="Black"/>
                </TabItem.Header>
                <ui:ListView ItemsSource="{Binding NumberParts}" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0, 20, 0, 0" Height="Auto" Background="LightGray" IsSelectionEnabled="False"  >
                    <ui:ListView.ItemTemplate>
                        <DataTemplate >
                            <Grid Margin="0, 5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Source="/Assets/wire.png"
                                       Grid.RowSpan="2"
                                       Width="40"
                                       Height="40"
                                       Margin="6"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding NumberPartId, Mode=OneTime}"
                                           FontWeight="Black"
                                           Margin="12,6,0,0" 
                                           FontSize="16"/>
                                <TextBlock Grid.Column="1"
                                           Grid.Row="1"
                                           Text="{Binding Customer.CustomerName, Mode=OneTime}"
                                           FontWeight="Black"
                                           Margin="12,0,0,6"
                                           FontSize="16"
                                           Foreground="Red"/>
                            </Grid>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>
            </TabItem>
            <TabItem Height="40" >
                <TabItem.Header>
                    <TextBlock Text="Adjuntos" FontFamily="Quicksand Medium" FontSize="16" Foreground="Black"/>
                </TabItem.Header>
                <ui:ListView ItemsSource="{Binding Attachments}" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0, 20, 0, 0" Height="Auto" Background="LightGray" IsSelectionEnabled="False"  >
                    <ui:ListView.ItemTemplate>
                        <DataTemplate >
                            <Grid Margin="0, 5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding ImageLocation}"
                                       Width="38"
                                       Height="38"
                                       Margin="6"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding AttachmentFilename}"
                                           VerticalAlignment="Center"
                                           FontWeight="Black"
                                           Margin="12,6,0,0" 
                                           FontSize="15"/>
                            </Grid>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>
            </TabItem>
            <TabItem Height="40" >
                <TabItem.Header>
                    <TextBlock Text="Flujo de firmas" FontFamily="Quicksand Medium" FontSize="16" Foreground="Black"/>
                </TabItem.Header>
                <ListView ItemsSource="{Binding Revisions}" VerticalAlignment="Top"  Margin="0, 20, 0, 0" Height="Auto" Width="Auto">
                    <ListView.View>
                        <GridView>
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader" >
                                    <Setter Property="Background" Value="Crimson" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontWeight" Value="Black"/>
                                    <Setter Property="FontSize" Value="15" />
                                    <Setter Property="Height" Value="30" />
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn Header="Secuencia" Width="100" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="/Assets/signed_.png"
                                               Width="46"
                                               Height="46"
                                               Margin="10"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Responsable" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="10">
                                            <TextBlock Text="{Binding Employee.Name}"
                                                       FontWeight="Black"
                                                       FontSize="16"/>
                                            <TextBlock Text="{Binding Employee.Department.DepartmentName}"
                                                       FontWeight="DemiBold"
                                                       FontStyle="Italic"
                                                       FontSize="15"
                                                       Foreground="Red"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Estatus" Width="150">
                                <GridViewColumn.CellTemplate >
                                    <DataTemplate >
                                        <Border CornerRadius="10"
                                                Background="{Binding Status.StatusColor}"
                                                Height="25"
                                                Width="95"
                                                Margin="10,20">
                                            <TextBlock Foreground="White" Text="{Binding Status.StatusName}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Black" FontSize="15"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Fecha de firma" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding LongRevisionDate}"
                                                   FontSize="14"
                                                   FontWeight="DemiBold"
                                                   FontStyle="Normal"
                                                   Margin="5, 20"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Hora de firma" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding LongRevisionHour}"
                                                   FontSize="14"
                                                   FontWeight="DemiBold"
                                                   FontStyle="Normal"
                                                   Margin="15, 20"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Notas" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Notes}"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   FontStyle="Normal"
                                                   Margin="15, 20"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
