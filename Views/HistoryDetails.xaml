<Page x:Class="ECN.Views.HistoryDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:local="clr-namespace:ECN.Views"
      DataContext="{Binding HistoryDetailsViewModel, Source={StaticResource Locator}}"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1200"
      Title="HistoryDetails">

    <Page.Resources>

        <Style x:Key="TextStyleProperty" TargetType="{x:Type Run}">
            <Style.Setters>
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="FontFamily" Value="Quicksand" />
            </Style.Setters>
        </Style>

        <Style x:Key="TextStylePropertyName" TargetType="{x:Type Run}">
            <Style.Setters>
                <Setter Property="FontSize" Value="15" />
                <Setter Property="Foreground" Value="Red" />
                <Setter Property="FontFamily" Value="Quicksand Medium" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style.Setters>
        </Style>


    </Page.Resources>

    <Grid Background="#FFE0E0E0">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Height="100" Width="550" Margin="20, 15, 0, 0" >
            <Image Source="/Assets/file96.png" Margin="20, 15, 5, 15" />
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 3">
                    <TextBlock FontSize="26" FontWeight="Black" >
                        <Run Text="Folio" />
                        <Run Text="{Binding Ecn.Id}" Foreground="#FFF1223F"  />
                    </TextBlock>
                    <Border VerticalAlignment="Top" HorizontalAlignment="Left" Height="25" Width="95" Margin="30, 8, 0, 0" Visibility="{Binding Ecn.IsEcoVisibility}" CornerRadius="10" Background="#FFFF0033">
                        <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Black" FontSize="17" >
                            <Run Text="ECO:"/>
                            <Run Text="{Binding Ecn.EcnEco.IdEco}"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
                <TextBlock FontSize="16" >
                    <Run Text="Fecha de inicio" />
                    <Run Text="{Binding Ecn.LongDate, Mode=OneWay}" FontWeight="Black" />
                </TextBlock>
                <TextBlock FontSize="16"  >
                    <Run Text="Fecha de cierre estimada"/>
                    <Run Text="{Binding Ecn.LongEndDate, Mode=OneWay}" FontWeight="Black" />
                </TextBlock>
            </StackPanel>
        </StackPanel>
        <TabControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="40, 130, 10, 10" Style="{StaticResource MahApps.Styles.TabControl}" Background="#FFE0E0E0">
            <TabItem Height="40">
                <TabItem.Header>
                    <TextBlock Text="Información General" FontFamily="Quicksand Medium" FontSize="16" Foreground="Black"/>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Height="Auto" Margin="0, 40, 0, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Background="Transparent" BorderThickness="0" />
                        <Border Background="Transparent" Grid.Row="1" BorderThickness="0" />
                        <Border Background="Transparent" Grid.Row="2" BorderThickness="0" />
                        <Border Background="Transparent" Grid.Row="3" BorderThickness="0"/>
                        <TextBlock Margin="0, 0, 0, 10">
                                <Run Text="TIPO DE CAMBIO: " Style="{StaticResource TextStylePropertyName}"/>
                                <Run Text="{Binding Ecn.ChangeType.ChangeTypeName}" Style="{StaticResource TextStyleProperty}" />
                        </TextBlock>
                        <TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="0, 0, 0, 10">
                                <Run Text="DESCRIPCIÓN DEL CAMBIO: " Style="{StaticResource TextStylePropertyName}"/>
                                <Run Text="{Binding Ecn.ChangeDescription}"  Style="{StaticResource TextStyleProperty}"/>
                        </TextBlock>
                        <TextBlock Grid.Row="2" TextWrapping="Wrap" Margin="0, 0, 0, 10">
                                <Run Text="JUSTIFICACIÓN DEL CAMBIO: " Style="{StaticResource TextStylePropertyName}"/>
                                <Run Text="{Binding Ecn.ChangeJustification}"  Style="{StaticResource TextStyleProperty}"/>
                        </TextBlock>
                        <TextBlock Grid.Row="3"  TextWrapping="Wrap" Margin="0, 0, 0, 10">
                                <Run Text="AFECTACIONES DE MANUFACTURA: " Style="{StaticResource TextStylePropertyName}"/>
                                <Run Text="{Binding Ecn.ManufacturingAffectations}" Style="{StaticResource TextStyleProperty}"/>
                        </TextBlock>
                    </Grid>
                    <Grid Height="100" Width="280" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="1000, 80, 0, 10" d:IsHidden="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="3*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Revisión del documento" FontSize="15" Grid.ColumnSpan="3" HorizontalAlignment="Center" FontStyle="Italic" FontWeight="Bold"/>
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="{Binding Ecn.OldDocumentLvl}" FontSize="42" HorizontalAlignment="Center" Foreground="Red" FontWeight="Bold"/>
                            <TextBlock Text="Revisión anterior" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <Image Grid.Row="1" Grid.Column="1" Source="/Assets/rightred.png" Width="32" VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="1" Grid.Column="2">
                            <TextBlock Text="{Binding Ecn.DocumentLvl}" FontSize="42" HorizontalAlignment="Center" Foreground="Red" FontWeight="Bold"/>
                            <TextBlock Text="Revisión nueva" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    <Grid Height="100" Width="280" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1000, 270, 0, 10" d:IsHidden="True" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="3*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Revisión del dibujo" FontSize="15" Grid.ColumnSpan="3" HorizontalAlignment="Center" FontStyle="Italic" FontWeight="Bold"/>
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="{Binding Ecn.OldDrawingLvl}" FontSize="42" HorizontalAlignment="Center" Foreground="Red" FontWeight="Bold"/>
                            <TextBlock Text="Revisión anterior" HorizontalAlignment="Center" />
                        </StackPanel>
                        <Image Grid.Row="1" Grid.Column="1" Source="/Assets/rightred.png" Width="32" VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="1" Grid.Column="2">
                            <TextBlock Text="{Binding Ecn.DrawingLvl}" FontSize="42" HorizontalAlignment="Center" Foreground="Red" FontWeight="Bold"/>
                            <TextBlock Text="Revisión nueva" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Height="40" >
                <TabItem.Header>
                    <TextBlock Text="Números de parte" FontFamily="Quicksand Medium" FontSize="16" Foreground="Black"/>
                </TabItem.Header>
                <ui:ListView ItemsSource="{Binding NumberParts}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 20, 0, 0" Width="850" Height="Auto" IsSelectionEnabled="False"  >
                    <ui:ListView.ItemTemplate>
                        <DataTemplate >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="800" />
                                </Grid.ColumnDefinitions>
                                <Rectangle Stroke="LightGray" 
                                           Fill="#FFE20000"
                                           Grid.RowSpan="2"/>
                                <Rectangle Stroke="LightGray" 
                                           Fill="Transparent"
                                           Grid.Column="1"
                                           Grid.RowSpan="2"/>
                                <Image Source="/Assets/wire-white.png"
                                       Grid.RowSpan="2"
                                       Width="40"
                                       Height="40"
                                       Margin="6"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding NumberPartId, Mode=OneTime}"
                                           FontWeight="Black"
                                           Margin="12,6,0,0" 
                                           FontSize="16"/>
                                <TextBlock Grid.Column="1"
                                           Grid.Row="1"
                                           Text="{Binding Customer.CustomerName, Mode=OneTime}"
                                           FontWeight="Black"
                                           Margin="12,0,0,6"
                                           FontSize="16"
                                           Foreground="Red"/>
                            </Grid>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>
            </TabItem>
            <TabItem Height="40" >
                <TabItem.Header>
                    <TextBlock Text="Adjuntos" FontFamily="Quicksand Medium" FontSize="16" Foreground="Black"/>
                </TabItem.Header>
                <ui:ListView Name="lvattachs" ItemsSource="{Binding Attachments}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="850" Margin="0, 20, 0, 0" Height="Auto" SelectedItem="{Binding SelectedAttachment}"  >
                    <ui:ListView.ItemTemplate>
                        <DataTemplate >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="850" />
                                </Grid.ColumnDefinitions>
                                <Rectangle Stroke="LightGray" 
                                           Fill="Transparent"
                                           Grid.Column="1"
                                           Grid.RowSpan="2"/>
                                <Image Source="{Binding ImageLocation}"
                                       Width="38"
                                       Height="38"
                                       Margin="6"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding AttachmentFilename}"
                                           VerticalAlignment="Center"
                                           FontWeight="Black"
                                           Margin="12,6,0,0" 
                                           FontSize="15"/>
                                <Button Grid.Column="1"
                                        Margin="355, 6, 0, 0"
                                        Content="Descargar"
                                        Background="SeaGreen"
                                        Foreground="White"
                                        Command="{Binding ElementName=lvattachs, Path=DataContext.DownloadAttachmentCommand}"/>
                            </Grid>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>
            </TabItem>
            <TabItem Height="40" >
                <TabItem.Header>
                    <TextBlock Text="Flujo de firmas" FontFamily="Quicksand Medium" FontSize="16" Foreground="Black"/>
                </TabItem.Header>
                <ListView ItemsSource="{Binding Revisions}" VerticalAlignment="Top"  Margin="0, 20, 0, 0" Height="Auto" Width="Auto">
                    <ListView.View>
                        <GridView>
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader" >
                                    <Setter Property="Background" Value="Crimson" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontWeight" Value="Black"/>
                                    <Setter Property="FontSize" Value="15" />
                                    <Setter Property="Height" Value="30" />
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn Header="Secuencia" Width="100" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="/Assets/signed_.png"
                                               Width="46"
                                               Height="46"
                                               Margin="10"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Responsable" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="10">
                                            <TextBlock Text="{Binding Employee.Name}"
                                                       FontWeight="Black"
                                                       FontSize="16"/>
                                            <TextBlock Text="{Binding Employee.Department.DepartmentName}"
                                                       FontWeight="DemiBold"
                                                       FontStyle="Italic"
                                                       FontSize="15"
                                                       Foreground="Red"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Estatus" Width="150">
                                <GridViewColumn.CellTemplate >
                                    <DataTemplate >
                                        <Border CornerRadius="10"
                                                Background="{Binding Status.StatusColor}"
                                                Height="25"
                                                Width="95"
                                                Margin="10,20">
                                            <TextBlock Foreground="White" Text="{Binding Status.StatusName}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Black" FontSize="15"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Fecha de firma" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding LongRevisionDate}"
                                                   FontSize="14"
                                                   FontWeight="DemiBold"
                                                   FontStyle="Normal"
                                                   Margin="5, 20"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Hora de firma" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding LongRevisionHour}"
                                                   FontSize="14"
                                                   FontWeight="DemiBold"
                                                   FontStyle="Normal"
                                                   Margin="15, 20"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Notas" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Notes}"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   FontStyle="Normal"
                                                   Margin="15, 20"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
