<Window x:Class="ECN.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ECN.Views"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        DataContext="{Binding LoginViewModel, Source={StaticResource Locator}}"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="400" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DataTemplate x:Key="RequiredHeaderTemplate">
            <TextBlock Text="{Binding}" 
                           Foreground="Black"
                           FontFamily="Quicksand Medium"/>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="#FFF9F4F4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185*"/>
            <ColumnDefinition Width="209*"/>
        </Grid.ColumnDefinitions>
        <ui:SimpleStackPanel Spacing="40" Grid.ColumnSpan="2" >
            <StackPanel Height="30" Background="Red">
                <TextBlock Text="ELECTRI-CORD" FontFamily="Arial" FontSize="20" FontWeight="Black" FontStyle="Oblique" Foreground="White" HorizontalAlignment="Center" Margin="6"/>
            </StackPanel>
            <TextBox x:Name="txtUsername"
                     Text="{Binding Path=Username, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     HorizontalAlignment="Center"
                     TextWrapping="Wrap" 
                     Width="330"
                     FontFamily="Quicksand Medium"
                     FontSize="15"
                     BorderThickness="2"
                     BorderBrush="Red"
                     ui:ControlHelper.Header="Nombre de usuario o No. de Empleado"
                     ui:ControlHelper.HeaderTemplate="{StaticResource RequiredHeaderTemplate}"
                     ui:ControlHelper.PlaceholderText="Ingresa tu nombre de usuario"
                     ui:ControlHelper.CornerRadius="5"/>
            <PasswordBox x:Name="txtPassword"
                         HorizontalAlignment="Center"
                         Width="330"
                         Margin="-20"
                         FontFamily="Quicksand Medium"
                         FontSize="15"
                         BorderThickness="2"
                         BorderBrush="Red"
                         ui:ControlHelper.Header="Contraseña"
                         ui:ControlHelper.HeaderTemplate="{StaticResource RequiredHeaderTemplate}"
                         ui:ControlHelper.PlaceholderText="Ingresa tu contraseña"
                         ui:ControlHelper.CornerRadius="5" 
                         PasswordChanged="txtPassword_PasswordChanged"/>
            <Button x:Name="btnLogin"
                    Content="Iniciar sesión" 
                    HorizontalAlignment="Center"
                    Width="160" 
                    Margin="30"
                    Background="Red"
                    Foreground="White"
                    FontFamily="Quicksand Medium"
                    FontSize="16"
                    ui:ControlHelper.CornerRadius="15"
                    Command="{Binding LoginCommand}"/>
            <Image HorizontalAlignment="Center"  Width="135" Source="/Assets/logorecortado.png" Visibility="Hidden"/>
        </ui:SimpleStackPanel>
    </Grid>

</Window>
