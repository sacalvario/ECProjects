<Window x:Class="ECN.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        DataContext="{Binding LoginViewModel, Source={StaticResource Locator}}"
        mc:Ignorable="d"
        Title="Login" Height="550" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" >

    <Grid Background="#FFCD1F1F">
        <StackPanel Margin="30 50, 30, 50" >
            <Image  Width="65" Height="32" Source="/Assets/completo.png" />
            <Border Background="White" Margin="10, 20" CornerRadius="5">
                <StackPanel Margin="25" >
                    <TextBox Text="{Binding Username}" Margin="15" Style="{StaticResource MaterialDesignFloatingHintTextBox}" md:HintAssist.Hint="Nombre de usuario"/>
                    <PasswordBox Margin="15" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" md:HintAssist.Hint="Contraseña" PasswordChanged="txtPassword_PasswordChanged"/>
                    <Button Margin="15, 50" Content="Iniciar sesión" Style="{StaticResource MaterialDesignRaisedDarkButton}" Command="{Binding LoginCommand}"/>
                    </StackPanel>
            </Border>
            <TextBlock Text="ELECTRI-CORD" FontFamily="Arial" FontWeight="Black" Foreground="White" FontSize="20" FontStyle="Oblique" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>

</Window>
