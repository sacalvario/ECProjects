<Page x:Class="ECN.Views.EcnRecords"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      DataContext="{Binding EcnRecordsViewModel, Source={StaticResource Locator}}"
      xmlns:local="clr-namespace:ECN.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EcnRecords">

    <Grid Background="#FFE0E0E0">
        <DataGrid ItemsSource="{Binding Records}" Margin="40" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" >
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Folio" Width="80" SortMemberPath="Id">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Id}" FontSize="22" FontWeight="Black" VerticalAlignment="Center" Margin="0, 0, 5, 0"/>
                                <Image Source="/Assets/file.png" Width="28" Height="28"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Fecha de inicio" Binding="{Binding LongDate}" FontStyle="Italic"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
