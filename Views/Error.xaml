<Page x:Class="ECN.Views.Error"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      DataContext="{Binding ErrorViewModel, Source={StaticResource Locator}}"
      mc:Ignorable="d" 
      d:DesignHeight="140" d:DesignWidth="350"
      Title="Error">

    <Grid Background="White">
        <Image Source="/Assets/delete.png" Width="28" Height="28" VerticalAlignment="Top" Margin="0, 20, 0, 0" />
        <TextBlock Text="{Binding Message}" Margin="0, 60, 0, 0" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Quicksand Medium" FontSize="16" TextWrapping="Wrap"/>
    </Grid>
</Page>
