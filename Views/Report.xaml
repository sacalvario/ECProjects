<Window x:Class="ProjectManager.Views.Report"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      DataContext="{Binding ProjectDetailsViewModel, Source={StaticResource Locator}}"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1350"
      Width="1250" Height="1080"  
      Title="ProjectReport">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="#FFE0E0E0">
        <StackPanel Margin="40" x:Name="print">

            <!-- Encabezado principal -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" HorizontalAlignment="Stretch">
                <!-- Icono e info principal -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <md:PackIcon Kind="FileDocument" Foreground="Green" Height="64" Width="64" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock FontSize="26" FontWeight="Black">
                            <Run Text="Project ID: "/>
                            <Run Text="{Binding Project.IdProject}" Foreground="Green"/>
                        </TextBlock>
                        <TextBlock FontSize="16">
                            <Run Text="Creation date: "/>
                            <Run Text="{Binding Project.LongDate, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock FontSize="16">
                            <Run Text="Customer need by date: "/>
                            <Run Text="{Binding Project.LongNeedByDate, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                    <Border VerticalAlignment="Top" Margin="20,0,0,0" CornerRadius="10" Background="{Binding Project.IdStatusNavigation.StatusColor}" Height="30" Width="160">
                        <TextBlock Foreground="White" Text="{Binding Project.IdStatusNavigation.Name}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Black"/>
                    </Border>
                </StackPanel>

                <Button Width="100" HorizontalAlignment="Right" Background="Green" Command="{Binding ExportPDFCommand}" CommandParameter="{Binding ElementName=print}"/>

                <!-- Project Team a la derecha con encabezado -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="50,0,0,0">
                    <TextBlock Text="Project Team" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <!-- Manager -->
                        <StackPanel Margin="20,0">
                            <TextBlock Text="Manager" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <md:PackIcon Kind="AccountTie" Width="40" Height="40" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Project.IdManagerNavigation.Name}" HorizontalAlignment="Center" FontWeight="Black"/>
                            <TextBlock Text="{Binding Project.IdManagerNavigation.IdDepartamentNavigation.Name}" HorizontalAlignment="Center" Foreground="Green" FontWeight="Black"/>
                        </StackPanel>
                        <!-- Generated By -->
                        <StackPanel Margin="20,0">
                            <TextBlock Text="Generated By" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <md:PackIcon Kind="User" Width="40" Height="40" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Project.IdGeneratedbyNavigation.Name}" HorizontalAlignment="Center" FontWeight="Black"/>
                            <TextBlock Text="{Binding Project.IdGeneratedbyNavigation.IdDepartamentNavigation.Name}" HorizontalAlignment="Center" Foreground="Green" FontWeight="Black"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Información general -->
            <TextBlock Text="General Information" FontSize="20" FontWeight="Bold" Margin="0,10"/>
            <Grid Margin="0,10,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Cotización -->
                <Border Grid.Column="0" Background="#FFD6D6D6" CornerRadius="15" Margin="5">
                    <StackPanel Margin="10">
                        <TextBlock Text="Quote Number" FontSize="16" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <md:PackIcon Kind="FileDocumentOutline" Foreground="Green" Width="28" Height="28" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Project.QuoteNumber}" FontSize="18" Foreground="Green" FontWeight="Black"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Complejidad -->
                <Border Grid.Column="1" Background="#FFD6D6D6" CornerRadius="15" Margin="5">
                    <StackPanel Margin="10">
                        <TextBlock Text="Project Complexity" FontSize="16" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <md:PackIcon Kind="ChartLine" Foreground="Green" Width="28" Height="28" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Project.ProjectComplexityString}" FontSize="18" Foreground="Green" FontWeight="Black"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Comentarios -->
                <Border Grid.Column="2" Background="#FFD6D6D6" CornerRadius="15" Margin="5">
                    <StackPanel Margin="10">
                        <TextBlock Text="Comments" FontSize="16" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <md:PackIcon Kind="CommentOutline" Foreground="Green" Width="28" Height="28" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Project.Comments}" TextWrapping="Wrap" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Desglose del proyecto -->
            <TextBlock Text="Project Breakdown" FontSize="20" FontWeight="Bold" Margin="0,10"/>
            <DataGrid ItemsSource="{Binding Project.ProjectTasks}" 
                      CanUserAddRows="False" CanUserDeleteRows="False" 
                      AutoGenerateColumns="False" Margin="0,10,0,20">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="#" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding IdTaskNavigation.NumberColor}" CornerRadius="5" Padding="4" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding IdTaskNavigation.Number}" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Task" Binding="{Binding IdTaskNavigation.Name}" Width="220"/>
                    <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="80"/>
                    <DataGridTextColumn Header="Start" Binding="{Binding LongStartDate}" Width="220"/>
                    <DataGridTextColumn Header="Target" Binding="{Binding LongEndDate}" Width="220"/>
                    <DataGridTextColumn Header="Responsible" Binding="{Binding IdEmployeeNavigation.Name}" Width="200"/>
                    <DataGridTemplateColumn Header="Status" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding IdStatusNavigation.StatusColor}" CornerRadius="5" Padding="4" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding IdStatusNavigation.Name}" Foreground="White" FontWeight="Black" HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Comments" Binding="{Binding Comments}" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Customer + Lista de partes -->
            <TextBlock Text="Project Parts" FontSize="20" FontWeight="Bold" Margin="0,10"/>
            <Border Background="#FFD6D6D6" CornerRadius="15" Margin="0,10,0,20">
                <StackPanel Margin="10">
                    <!-- Cliente -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <md:PackIcon Kind="AccountSupervisorCircle" Foreground="Green" Width="28" Height="28" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Project.IdCustomerNavigation.Name}" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Lista de partes -->
                    <ScrollViewer Height="200">
                        <ItemsControl ItemsSource="{Binding Project.ProjectParts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="5,3">
                                        <md:PackIcon Kind="CubeOutline" Foreground="Gray" Width="20" Height="20" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Part.PartNumber}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Part.Revision}" Foreground="Green" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Window>

