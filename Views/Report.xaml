<Window x:Class="ProjectManager.Views.Report"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      DataContext="{Binding ProjectDetailsViewModel, Source={StaticResource Locator}}"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="850"
      Title="ProjectReport">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="#FFE0E0E0">
        <StackPanel Margin="40">

            <!-- Encabezado principal -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <md:PackIcon Kind="FileDocument" Foreground="Green" Height="64" Width="64" Margin="0,0,15,0"/>
                <StackPanel>
                    <TextBlock FontSize="26" FontWeight="Black">
                        <Run Text="Project ID: "/>
                        <Run Text="{Binding Project.IdProject}" Foreground="Green"/>
                    </TextBlock>
                    <TextBlock FontSize="16">
                        <Run Text="Creation date: "/>
                        <Run Text="{Binding Project.LongDate, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock FontSize="16">
                        <Run Text="Customer need by date: "/>
                        <Run Text="{Binding Project.LongNeedByDate, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
                <Border VerticalAlignment="Top" Margin="20,0,0,0" CornerRadius="10" Background="{Binding Project.IdStatusNavigation.StatusColor}" Height="30" Width="160">
                    <TextBlock Foreground="White" Text="{Binding Project.IdStatusNavigation.Name}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Black"/>
                </Border>
            </StackPanel>

            <!-- Información general -->
            <TextBlock Text="General Information" FontSize="20" FontWeight="Bold" Margin="0,10"/>
            <Grid Margin="0,10,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Cliente -->
                <Border Grid.Column="0" Background="#FFD6D6D6" CornerRadius="15" Margin="5">
                    <StackPanel Margin="10">
                        <TextBlock Text="Customer" FontSize="16" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <md:PackIcon Kind="AccountSupervisorCircle" Foreground="Green" Width="28" Height="28" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Project.IdCustomerNavigation.Name}" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Cotización -->
                <Border Grid.Column="1" Background="#FFD6D6D6" CornerRadius="15" Margin="5">
                    <StackPanel Margin="10" HorizontalAlignment="Center">
                        <TextBlock Text="Quote Number" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Project.QuoteNumber}" FontSize="20" Foreground="Green" FontWeight="Black"/>
                    </StackPanel>
                </Border>

                <!-- Complejidad -->
                <Border Grid.Column="2" Background="#FFD6D6D6" CornerRadius="15" Margin="5">
                    <StackPanel Margin="10" HorizontalAlignment="Center">
                        <TextBlock Text="Project Complexity" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Project.ProjectComplexityString}" FontSize="20" Foreground="Green" FontWeight="Black"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Desglose del proyecto -->
            <TextBlock Text="Project Breakdown" FontSize="20" FontWeight="Bold" Margin="0,10"/>
            <DataGrid ItemsSource="{Binding Project.ProjectTasks}" 
                      CanUserAddRows="False" CanUserDeleteRows="False" 
                      AutoGenerateColumns="False" Margin="0,10,0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding IdTaskNavigation.Number}" Width="40"/>
                    <DataGridTextColumn Header="Task" Binding="{Binding IdTaskNavigation.Name}" Width="200"/>
                    <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="100"/>
                    <DataGridTextColumn Header="Start" Binding="{Binding LongStartDate}" Width="150"/>
                    <DataGridTextColumn Header="Target" Binding="{Binding LongEndDate}" Width="150"/>
                    <DataGridTextColumn Header="Responsible" Binding="{Binding IdEmployeeNavigation.Name}" Width="200"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding IdStatusNavigation.Name}" Width="100"/>
                    <DataGridTextColumn Header="Comments" Binding="{Binding Comments}" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Lista de partes -->
            <TextBlock Text="Project Parts" FontSize="20" FontWeight="Bold" Margin="0,10"/>
            <Border Background="#FFD6D6D6" CornerRadius="15" Margin="0,10,0,20">
                <ScrollViewer Height="200">
                    <ItemsControl ItemsSource="{Binding Project.ProjectParts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Part.PartNumber}" Grid.Column="0" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Part.Revision}" Grid.Column="1" Foreground="Green" HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Responsable y Manager -->
            <TextBlock Text="Project Team" FontSize="20" FontWeight="Bold" Margin="0,10"/>
            <Grid Margin="0,10,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Manager -->
                <Border Grid.Column="0" Background="#FFD6D6D6" CornerRadius="15" Margin="5">
                    <StackPanel Margin="10" HorizontalAlignment="Center">
                        <TextBlock Text="Project Manager" FontSize="16" FontWeight="Bold"/>
                        <md:PackIcon Kind="AccountTie" Width="50" Height="50" Margin="0,10"/>
                        <TextBlock Text="{Binding Project.IdManagerNavigation.Name}" FontWeight="Black"/>
                        <TextBlock Text="{Binding Project.IdManagerNavigation.IdDepartamentNavigation.Name}" Foreground="Green" FontWeight="Black"/>
                    </StackPanel>
                </Border>

                <!-- Generador -->
                <Border Grid.Column="1" Background="#FFD6D6D6" CornerRadius="15" Margin="5">
                    <StackPanel Margin="10" HorizontalAlignment="Center">
                        <TextBlock Text="Generated By" FontSize="16" FontWeight="Bold"/>
                        <md:PackIcon Kind="User" Width="40" Height="40" Margin="0,10"/>
                        <TextBlock Text="{Binding Project.IdGeneratedbyNavigation.Name}" FontWeight="Black"/>
                        <TextBlock Text="{Binding Project.IdGeneratedbyNavigation.IdDepartamentNavigation.Name}" Foreground="Green" FontWeight="Black"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Comentarios -->
            <TextBlock Text="Comments" FontSize="20" FontWeight="Bold" Margin="0,10"/>
            <Border Background="#FFD6D6D6" CornerRadius="15" Margin="0,10,0,20" Padding="10">
                <TextBlock Text="{Binding Project.Comments}" TextWrapping="Wrap" FontSize="14"/>
            </Border>

            
        </StackPanel>
    </ScrollViewer>
</Window>
