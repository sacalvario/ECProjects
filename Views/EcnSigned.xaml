<Page x:Class="ECN.Views.EcnSigned"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       DataContext="{Binding EcnSignedViewModel, Source={StaticResource Locator}}"
      xmlns:local="clr-namespace:ECN.Views"
      mc:Ignorable="d" 
      d:DesignHeight="150" d:DesignWidth="400"
      Title="EcnSigned">

    <Grid Background="White">
        <Image Source="/Assets/checkgreen.png" Width="28" Height="28" VerticalAlignment="Top" Margin="0, 20, 0, 0" />
        <TextBlock Text="Se ha validado correctamente el ECN con el folio:" Margin="0, 60, 0, 0" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Quicksand Medium" FontSize="16"/>
        <TextBlock Text="{Binding ID}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 50, 0, 0" Foreground="Red" FontWeight="Black" FontSize="24"/>
    </Grid>
</Page>
